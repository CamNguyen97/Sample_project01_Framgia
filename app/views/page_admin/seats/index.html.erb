<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <%= link_to t("dashboard") %>
  </li>
  <li class="breadcrumb-item active"><%= t "seat" %></li>
  <%= button_tag t("add"), class: "btn btn-primary btn-add btn-seat" %>
</ol>
<div class="card mb-3">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <%= render "headerTable" %>
        </thead>
        <tbody>
          <% @seats.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= item.seat_type %></td>
              <td><%= item.cinemaroom_id %></td>
              <td><%= item.status %></td>
              <td><%= item.created_at %></td>
              <td><%= item.updated_at %></td>
              <td>
              <%= button_tag t("update"), data: item.id,
                class: "btn btn-info btn-add btn-seat-update" %>
              <%= button_tag t("delete"), data: item.id,
                class: "btn btn-danger btn-add btn-seat-delete" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


