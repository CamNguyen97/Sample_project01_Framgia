<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <%= link_to t "dashboard" %>
  </li>
  <li class="breadcrumb-item active"><%= t ".tickets" %></li>
</ol>
<div class="card mb-3">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <%= render "headerTable" %>
          </tr>
        </thead>

        <tbody>
          <% @tickets.each_with_index do |item, index| %>
          <tr>
            <td><%= index_record index %></td>
            <td><%= item.pay_ticket %></td>
            <td><%= item.show_time %></td>
            <td><%= Seat.find_by(id: item.seat_id).seat_type == true ? "Chair VIP" : "Chair" %></td>
            <td><%= Movie.find_by(id: item.movie_id).name %></td>
            <td><%= item.cinemaroom_id %></td>
            <td><%= item.created_at %></td>
            <td><%= item.updated_at %></td>
            <td><%= item.status %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
