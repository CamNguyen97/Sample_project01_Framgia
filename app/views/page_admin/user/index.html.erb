<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <%= link_to t("dashboard") %>
  </li>
  <li class="breadcrumb-item active"><%= t ".user" %></li>
</ol>
<div class="card mb-3">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th><%= t ".id" %></th>
            <th><%= t ".name" %></th>
            <th><%= t ".active" %></th>
            <th><%= t ".adress" %></th>
            <th><%= t ".phone" %></th>
            <th><%= t ".role" %></th>
            <th><%= t ".email" %></th>
            <th><%= t ".status" %></th>
            <th><%= t ".created_at" %></th>
            <th><%= t ".updated_at" %></th>
            <th><%= t ".action" %></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.name %></td>
            <td><%= item.activated %></td>
            <td><%= item.adress %></td>
            <td><%= item.role %></td>
            <td><%= item.phone %></td>
            <td><%= item.email %></td>
            <td><%= item.status %></td>
            <td><%= item.created_at %></td>
            <td><%= item.updated_at %></td>
            <td></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= javascript_include_tag "table" %>

