<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <%= link_to t("dashboard") %>
  </li>
  <li class="breadcrumb-item active"><%= t ".user" %></li>
  <%= button_tag t("add"), class: "btn btn-primary btn-add btn-movies" %>
</ol>
<div class="card mb-3">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
        <tr>
          <%render "headerTable"%>
        </tr>
        </thead>
        <tbody>
          <% @movies.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.name %></td>
            <td><%= item.produce_year %></td>
            <td><%= item.broadcasing_time %></td>
            <td><%= item.descreption %></td>
            <td><%= item.trailer %></td>
            <td><%= item.studio.name %></td>
            <td><%= item.status %></td>
            <td><%= item.created_at %></td>
            <td><%= item.updated_at %></td>
            <td>
              <%= button_tag t("update"), data: item.id,
                class: "btn btn-info btn-add btn-movie-update" %>
              <%= button_tag t("delete"), data: item.id,
                class: "btn btn-danger btn-add btn-movie-delete" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


