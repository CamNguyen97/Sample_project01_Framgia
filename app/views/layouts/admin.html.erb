<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title yield :title %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "page_admin", media: "all",
      "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "application",
      "data-turbolinks-track": "reload" %>
  </head>

  <body>
    <% if logged_in? && check_role? %>
      <%= render "page_admin/homes/header" %>
      <div id="page-wrapper">
       <%= yield %>
      </div>
    <% else %>
      <div class="not_login" >
        <p><%= t "not_login" %></p>
        <p>
          <%= link_to t(".login"), login_path %>
        </p>
      </div>
    <% end %>
     <%= javascript_include_tag "table" %>
     <%= javascript_include_tag "admin" %>
  </body>
</html>
