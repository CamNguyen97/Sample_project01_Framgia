<div class="card card-login mx-auto mt-5">
  <div class="card-header"><%= t ".login" %></div>
  <div class="card-body">
    <%= form_for :sessionsadmin, url: "" do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control",
        placeholder: t("login.sessions_admin.index.email") %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control",
        placeholder: t("login.sessions_admin.index.password") %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t ".remember_password" %></span>
      <% end %>

      <%= f.submit t(".login"), class: "btn btn-primary btn-block" %>
    <% end %>
    <div class="text-center">
      <%= link_to t(".register_account"), "#", {class: "d-block small mt-3"} %>
      <%= link_to t(".forgot_password"), "#", {class: "d-block small"} %>
    </div>
  </div>
</div>
